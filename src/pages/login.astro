---
// src/pages/login.astro - VERSIÓN REDISEÑADA
import { supabase } from '../lib/supabase';

const { data: { session } } = await supabase.auth.getSession();

// Si el usuario ya tiene sesión, lo redirigimos directamente
if (session) {
  return Astro.redirect('/personas');
}

const errorMessage = Astro.url.searchParams.get('error');
---

<!DOCTYPE html>
<html lang="es" class="h-full bg-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Iniciar Sesión | App Filadelfia</title>
    <link rel="stylesheet" href="/src/styles/global.css">
</head>
<body class="h-full">
    <div class="flex min-h-full">
        <!-- ====================================================== -->
        <!-- COLUMNA IZQUIERDA: IMAGEN DE BIENVENIDA -->
        <!-- ====================================================== -->
        <div class="relative hidden w-0 flex-1 lg:block">
            <!-- Imagen de fondo -->
            <img 
                class="absolute inset-0 h-full w-full object-cover" 
                src="https://scontent.fclo8-1.fna.fbcdn.net/v/t51.82787-15/534328334_17987149034840011_7156183086442288104_n.webp?stp=dst-jpg_tt6&_nc_cat=108&ccb=1-7&_nc_sid=127cfc&_nc_ohc=B7VaYu9Ei88Q7kNvwFQ9F8b&_nc_oc=AdnvqxmpcHejuV1koTzEaCH1QG6GGCw-l9FhE5eVY0_KA9O3h4j2KXCrNQstBoF7Jr4&_nc_zt=23&_nc_ht=scontent.fclo8-1.fna&_nc_gid=j5weNLnN6mbHaslU-Fma4w&oh=00_AfWJg91YFPivfKXAsjhreTdZG9OzdQEHIgN3ui95FyIHfA&oe=68ABD5D2"
                alt="Comunidad de fe reunida en oración"
            >
            <!-- Overlay con gradiente para mejorar legibilidad -->
            <div class="absolute inset-0 bg-gradient-to-br from-green-600/80 to-blue-600/80"></div>
            
            <!-- Contenido sobre la imagen -->
            <div class="relative flex h-full flex-col justify-center px-12 text-white">
                <div class="max-w-md">
                    <!-- Logo o ícono -->
                    <div class="mb-8">
                        <div class="flex h-16 w-16 items-center justify-center rounded-full bg-white/20 backdrop-blur-sm">
                            <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                    </div>
                    
                    <h1 class="text-4xl font-bold leading-tight mb-4">
                        Bienvenido a la Plataforma Filadelfia
                    </h1>
                    <p class="text-xl text-white/90 mb-6">
                        Organizando y fortaleciendo nuestra comunidad cristiana con herramientas modernas de gestión.
                    </p>
                    
                    <!-- Características destacadas -->
                    <div class="space-y-3">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 mr-3 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-white/90">Gestión de miembros y visitantes</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 mr-3 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-white/90">Control de escalas de crecimiento</span>
                        </div>
                        <div class="flex items-center">
                            <svg class="h-5 w-5 mr-3 text-green-300" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                            </svg>
                            <span class="text-white/90">Reportes y estadísticas</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ====================================================== -->
        <!-- COLUMNA DERECHA: FORMULARIO DE LOGIN -->
        <!-- ====================================================== -->
        <div class="flex flex-1 flex-col justify-center px-4 py-12 sm:px-6 lg:flex-none lg:px-20 xl:px-24">
            <div class="mx-auto w-full max-w-sm lg:w-96">
                <!-- Header del formulario -->
                <div class="text-center">
                    <!-- Logo pequeño para móviles -->
                    <div class="mx-auto h-12 w-12 flex items-center justify-center rounded-full bg-green-100 lg:hidden mb-4">
                        <svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900 mb-2">
                        Iniciar Sesión
                    </h2>
                    <p class="text-sm text-gray-600">
                        Accede a tu cuenta para gestionar los datos de las personas
                    </p>
                </div>

                <!-- Formulario -->
                <div class="mt-8">
                    <!-- Mensaje de error -->
                    {errorMessage && (
                        <div class="mb-4 rounded-md bg-red-50 p-4 border border-red-200">
                            <div class="flex">
                                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                                </svg>
                                <div class="ml-3">
                                    <h3 class="text-sm font-medium text-red-800">Error de autenticación</h3>
                                    <p class="mt-1 text-sm text-red-700">{errorMessage}</p>
                                </div>
                            </div>
                        </div>
                    )}

                    <!-- Formulario principal -->
                    <form action="/api/login" method="POST" enctype="application/x-www-form-urlencoded" class="space-y-6">
                        <!-- Campo Email -->
                        <div>
                            <label for="email" class="block text-sm font-medium leading-6 text-gray-900">
                                Correo electrónico
                            </label>
                            <div class="mt-2">
                                <input 
                                    id="email" 
                                    name="email" 
                                    type="email" 
                                    autocomplete="email" 
                                    required
                                    placeholder="tu@email.com"
                                    class="block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6 transition-colors"
                                >
                            </div>
                        </div>

                        <!-- Campo Contraseña -->
                        <div>
                            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">
                                Contraseña
                            </label>
                            <div class="mt-2">
                                <input 
                                    id="password" 
                                    name="password" 
                                    type="password" 
                                    autocomplete="current-password" 
                                    required
                                    placeholder="••••••••"
                                    class="block w-full rounded-md border-0 py-2.5 px-3 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-green-600 sm:text-sm sm:leading-6 transition-colors"
                                >
                            </div>
                        </div>

                        <!-- Botón de envío -->
                        <div>
                            <button 
                                type="submit"
                                class="flex w-full justify-center rounded-md bg-green-600 px-3 py-2.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600 transition-all duration-200 transform hover:scale-[1.02]"
                            >
                                Iniciar sesión
                            </button>
                        </div>
                    </form>

                    <!-- Footer del formulario -->
                    <div class="mt-8 text-center">
                        <p class="text-xs text-gray-500">
                            ¿Problemas para acceder? Contacta al administrador del sistema
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script para mejorar la experiencia de usuario -->
    
</body>
</html>

