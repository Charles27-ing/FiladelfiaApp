---
// src/pages/personas/nueva.astro
import LayoutProtected from "../../layouts/LayoutProtected.astro";
import { supabase } from "../../lib/supabase";
import type { Departamento } from "../../models/persona.model";

// Cargar datos de Colombia (departamentos y municipios)
import colombiaData from "../../data/colombia.json";
const departamentos: Departamento[] = colombiaData.map((dept: any) => ({
    id: dept.id.toString(),
    nombre: dept.departamento,
    ciudades: dept.ciudades.map((ciudad: string, index: number) => ({
        id: `${dept.id}-${index}`,
        nombre: ciudad,
    })),
}));

// Obtener escalas de crecimiento, sedes y ministerios
const { data: escalas } = await supabase.from("escala_de_crecimiento").select("id, nombre_escala").order("id", { ascending: true });
const { data: sedes, error } = await supabase.from("sedes").select("id, nombre_sede");
const { data: ministerios } = await supabase.from("ministerios").select("id, nombre_minist").order("nombre_minist", { ascending: true });

if (error) {
    console.error("Error al cargar las sedes:", error);
}
---

<LayoutProtected title="Registrar Nueva Persona">
    <div class="bg-gray-50 p-4 sm:p-8">
        <div class="max-w-5xl mx-auto bg-white p-6 sm:p-8 rounded-xl shadow-lg">
            <h1 class="text-3xl font-bold text-gray-800 mb-6">
                Registro de Nueva Persona
            </h1>

            <form
                id="wizard-form"
                method="POST"
                action="/api/personas"
                enctype="multipart/form-data"
                class="space-y-8"
            >
                <!-- ================================================== -->
                <!-- PASO 1: VERIFICACIÓN DE ID (Visible por defecto) -->
                <!-- ================================================== -->
                <div id="step-1">
                    <div class="bg-gradient-to-br from-green-50 to-emerald-100 p-6 rounded-lg border border-green-200">
                        <h2 class="text-xl font-semibold text-green-800 border-b border-green-300 pb-2 mb-4">
                            Paso 1: Verificación de Identificación
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
                            <div class="md:col-span-2">
                                <label for="numero_id" class="block mb-1 text-sm font-medium text-gray-700">
                                    Número de Identificación
                                </label>
                                <input
                                    type="text"
                                    id="numero_id"
                                    name="numero_id"
                                    required
                                    class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500"
                                    placeholder="Ingrese el número de identificación"
                                />
                            </div>
                            <div>
                                <button
                                    type="button"
                                    id="check-id-btn"
                                    class="w-full px-4 py-2 bg-gradient-to-r from-green-600 to-emerald-600 text-white rounded-md hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-2 focus:ring-green-500 shadow-md"
                                >
                                    Verificar ID
                                </button>
                            </div>
                        </div>
                        <div id="id-status" class="mt-3 text-sm"></div>
                    </div>
                    <!-- Botón Siguiente solo para el Paso 1 -->
                    <div class="flex justify-end pt-6 border-t border-gray-200 mt-8">
                         <button type="button" id="next-btn" class="hidden px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 shadow-md">
                            Siguiente
                        </button>
                    </div>
                </div>

                <!-- ================================================== -->
                <!-- PASO 2: FORMULARIO COMPLETO (Oculto por defecto) -->
                <!-- ================================================== -->
                <div id="step-2" class="hidden space-y-8">
                    <!-- SECCIÓN: INFORMACIÓN PERSONAL BÁSICA -->
                    <div class="bg-gradient-to-br from-blue-50 to-indigo-100 p-6 rounded-lg border border-blue-200">
                        <h2 class="text-xl font-semibold text-blue-800 border-b border-blue-300 pb-2 mb-6">
                            📋 Información Personal Básica
                        </h2>
                        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                            <!-- Columna izquierda: Campos de información -->
                            <div class="lg:col-span-2 space-y-4">
                                <!-- ... (Todos los campos de texto: tipo_id, nombres, apellidos, etc.) ... -->
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="tipo_id" class="block mb-1 text-sm font-medium text-gray-700">Tipo de Documento *</label>
                                        <select id="tipo_id" name="tipo_id" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            <option value="">Seleccionar...</option>
                                            <option value="CC">Cédula ciudadana</option>
                                            <option value="TI">Tarjeta de identidad</option>
                                            <option value="CE">Cédula de extranjería</option>
                                            <option value="RC">Registro civil</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="nombres" class="block mb-1 text-sm font-medium text-gray-700">Nombres Completos *</label>
                                        <input type="text" id="nombres" name="nombres" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Nombres"/>
                                    </div>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="primer_apellido" class="block mb-1 text-sm font-medium text-gray-700">Primer Apellido *</label>
                                        <input type="text" id="primer_apellido" name="primer_apellido" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Primer apellido"/>
                                    </div>
                                    <div>
                                        <label for="segundo_apellido" class="block mb-1 text-sm font-medium text-gray-700">Segundo Apellido</label>
                                        <input type="text" id="segundo_apellido" name="segundo_apellido" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Segundo apellido"/>
                                    </div>
                                </div>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="genero" class="block mb-1 text-sm font-medium text-gray-700">Género *</label>
                                        <select id="genero" name="genero" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            <option value="">Seleccionar...</option>
                                            <option value="Masculino">Masculino</option>
                                            <option value="Femenino">Femenino</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="fecha_nacimiento" class="block mb-1 text-sm font-medium text-gray-700">Fecha de Nacimiento *</label>
                                        <input type="date" id="fecha_nacimiento" name="fecha_nacimiento" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500"/>
                                    </div>
                                </div>
                 
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label for="estado_civil" class="block mb-1 text-sm font-medium text-gray-700">Estado Civil *</label>
                                        <select id="estado_civil" name="estado_civil" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500">
                                            <option value="">Seleccionar...</option>
                                            <option value="SOLTERO(A)">Soltero(a)</option>
                                            <option value="CASADO(A)">Casado(a)</option>
                                            <option value="UNION-LIBRE">Unión Libre</option>
                                            <option value="VIUDO(A)">Viudo(a)</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="telefono" class="block mb-1 text-sm font-medium text-gray-700">Teléfono *</label>
                                        <input type="tel" id="telefono" name="telefono" required pattern="[0-9]{7,10}" title="Ingrese solo números (7 a 10 dígitos)" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="3001234567"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="email" class="block mb-1 text-sm font-medium text-gray-700">Correo Electrónico (Opcional)</label>
                                    <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="correo@ejemplo.com"/>
                                </div>
                            </div>
                            <!-- Columna derecha: Foto -->
                            <div class="lg:col-span-1">
                                <div class="bg-gray-100 rounded-lg p-4 h-full flex flex-col items-center justify-center min-h-[400px]">
                                    <div id="image-preview-container" class="w-40 h-40 bg-gray-300 rounded-full flex items-center justify-center mb-4 overflow-hidden">
                                        <svg id="default-avatar" class="w-20 h-20 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                                        <img id="image-preview" src="" alt="Vista previa" class="w-full h-full object-cover hidden">
                                    </div>
                                    <div class="w-full space-y-3">
                                        <div>
                                            <label for="foto_archivo" class="block mb-2 text-sm font-medium text-gray-700 text-center">Subir desde dispositivo</label>
                                            <input type="file" id="foto_archivo" name="foto" accept="image/*" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"/>
                                            <p class="mt-1 text-xs text-gray-500 text-center">JPG, PNG (máx. 5MB)</p>
                                        </div>
                                        <div class="text-center text-sm text-gray-500"><span>o</span></div>
                                        <div>
                                            <label for="url_foto" class="block mb-2 text-sm font-medium text-gray-700 text-center">URL de imagen</label>
                                            <input type="url" id="url_foto" name="url_foto" class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm" placeholder="https://ejemplo.com/imagen.jpg"/>
                                        </div>
                                        <button type="button" id="remove-image" class="w-full px-3 py-2 bg-red-100 text-red-700 rounded-md hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-red-500 text-sm hidden">Quitar imagen</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN: UBICACIÓN -->
                    <div class="bg-gradient-to-br from-purple-50 to-violet-100 p-6 rounded-lg border border-purple-200">
                        <h2 class="text-xl font-semibold text-purple-800 border-b border-purple-300 pb-2 mb-6">
                            📍 Ubicación
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label for="departamento" class="block mb-1 text-sm font-medium text-gray-700">Departamento *</label>
                                <select id="departamento" name="departamento" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                                    <option value="">Seleccione departamento...</option>
                                    {departamentos.map((dept ) => (<option value={dept.nombre}>{dept.nombre}</option>))}
                                </select>
                            </div>
                            <div>
                                <label for="municipio" class="block mb-1 text-sm font-medium text-gray-700">Municipio *</label>
                                <select id="municipio" name="municipio" required disabled class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500 disabled:bg-gray-100">
                                    <option value="">Seleccione municipio...</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-4">
                            <label for="direccion" class="block mb-1 text-sm font-medium text-gray-700">Dirección/Barrio *</label>
                            <input type="text" id="direccion" name="direccion" required class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-purple-500" placeholder="Dirección completa o barrio"/>
                        </div>
                    </div>

                    <!-- SECCIÓN: INFORMACIÓN DE LA IGLESIA -->
                    <div class="bg-gradient-to-br from-green-50 to-emerald-100 p-6 rounded-lg border border-green-200">
                        <h2 class="text-xl font-semibold text-green-800 border-b border-green-300 pb-2 mb-6">
                            ⛪ Información de la Iglesia
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                            </label>
                            <select
                                id="sede_id"
                                name="sede_id"
                                required
                                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-colors"
                            >
                                <option value="">Seleccione una sede...</option>
                                {sedes && sedes.map((sede) => (
                                    <option value={sede.id}>{sede.nombre_sede}</option>
                                ))}
                            </select>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-700">¿Está Bautizado? *</label>
                                <div class="flex items-center space-x-4">
                                    <label class="inline-flex items-center"><input type="radio" name="bautizado" value="true" class="form-radio text-green-600" required /><span class="ml-2 text-gray-700">Sí</span></label>
                                    <label class="inline-flex items-center"><input type="radio" name="bautizado" value="false" class="form-radio text-red-600" required /><span class="ml-2 text-gray-700">No</span></label>
                                </div>
                            </div>
                            <div class="md:col-span-2">
                                <label for="escala_crecimiento" class="block mb-1 text-sm font-medium text-gray-700">Escala de Crecimiento *</label>
                                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 max-h-48 overflow-y-auto border border-gray-200 rounded-md p-3">
                                    {escalas && escalas.map((escala) => (
                                        <label class="inline-flex items-center"><input type="checkbox" name="escalas" value={escala.id} class="form-checkbox text-green-600"/><span class="ml-2 text-gray-700 text-sm">{escala.nombre_escala}</span></label>
                                    ))}
                                </div>
                            </div>
                            <div class="md:col-span-2">
                                <label class="block mb-2 text-sm font-medium text-gray-700">Ministerios (puede seleccionar varios)</label>
                                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-2 max-h-48 overflow-y-auto border border-gray-200 rounded-md p-3">
                                    {ministerios && ministerios.map((ministerio) => (
                                        <label class="inline-flex items-center"><input type="checkbox" name="ministerios" value={ministerio.id} class="form-checkbox text-green-600"/><span class="ml-2 text-gray-700 text-sm">{ministerio.nombre_minist}</span></label>
                                    ))}
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- BOTONES DE NAVEGACIÓN Y ENVÍO PARA EL PASO 2 -->
                    <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                        <button type="button" id="prev-btn" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-400 shadow-md">
                            Anterior
                        </button>
                        <button type="submit" id="submit-btn" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-md">
                            Registrar Persona
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- SCRIPT SIMPLIFICADO PARA DOS PASOS -->
    <script define:vars={{ departamentos }} is:inline>
        document.addEventListener('DOMContentLoaded', function() {
            // --- VARIABLES DEL DOM ---
            const step1 = document.getElementById('step-1');
            const step2 = document.getElementById('step-2');
            
            const checkIdBtn = document.getElementById('check-id-btn');
            const numeroIdInput = document.getElementById('numero_id');
            const idStatus = document.getElementById('id-status');
            
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            const submitBtn = document.getElementById('submit-btn');

            // --- LÓGICA DE NAVEGACIÓN ---
            nextBtn.addEventListener('click', function() {
                // Oculta el paso 1 y muestra el paso 2
                step1.classList.add('hidden');
                step2.classList.remove('hidden');
            });

            prevBtn.addEventListener('click', function() {
                // Oculta el paso 2 y muestra el paso 1
                step2.classList.add('hidden');
                step1.classList.remove('hidden');
                // Opcional: Ocultar 'Siguiente' de nuevo para forzar reverificación
                nextBtn.classList.add('hidden');
                idStatus.innerHTML = `<span class="text-blue-600">Por favor, verifique el ID nuevamente.</span>`;
            });

            // --- VERIFICACIÓN DE ID ---
            checkIdBtn.addEventListener('click', async function() {
                const numeroId = numeroIdInput.value.trim();
                if (!numeroId) {
                    idStatus.innerHTML = `<span class="text-red-600">⚠ Por favor ingrese un número de identificación</span>`;
                    return;
                }

                try {
                    idStatus.innerHTML = `<span class="text-blue-600">🔍 Verificando...</span>`;
                    const response = await fetch('/api/id-checker', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ numero_id: numeroId }),
                    });
                    const result = await response.json();

                    if (result.exists) {
                        idStatus.innerHTML = `<span class="text-red-600">❌ Esta Identificacion ya está registrada. Por favor, usa una ID diferente.</span>`;
                        nextBtn.classList.add('hidden');
                    } else {
                        idStatus.innerHTML = `<span class="text-green-600">✅ ID disponible. Haga clic en "Siguiente" para continuar.</span>`;
                        nextBtn.classList.remove('hidden'); // Mostrar botón "Siguiente"
                    }
                } catch (error) {
                    idStatus.innerHTML = `<span class="text-red-600">Error al verificar el ID. Intente nuevamente.</span>`;
                    nextBtn.classList.add('hidden');
                }
            });
            
            // --- FUNCIONALIDAD DEL FORMULARIO (sin cambios) ---
    
            const telefonoInput = document.getElementById('telefono');
            telefonoInput.addEventListener("input", function() { this.value = this.value.replace(/[^0-9]/g, "").slice(0, 10); });

            const departamentoSelect = document.getElementById('departamento');
            const municipioSelect = document.getElementById('municipio');
            departamentoSelect.addEventListener('change', function() {
                const selectedDept = this.value;
                municipioSelect.innerHTML = '<option value="">Seleccione municipio...</option>';
                municipioSelect.disabled = true;
                if (selectedDept) {
                    const dept = departamentos.find(d => d.nombre === selectedDept);
                    if (dept && dept.ciudades) {
                        dept.ciudades.forEach(ciudad => {
                            const option = document.createElement('option');
                            option.value = ciudad.nombre;
                            option.textContent = ciudad.nombre;
                            municipioSelect.appendChild(option);
                        });
                        municipioSelect.disabled = false;
                    }
                }
            });

            const fotoArchivoInput = document.getElementById('foto_archivo');
            const urlFotoInput = document.getElementById('url_foto');
            const imagePreview = document.getElementById('image-preview');
            const defaultAvatar = document.getElementById('default-avatar');
            const removeImageBtn = document.getElementById('remove-image');
            
            function showImagePreview(src) {
                imagePreview.src = src;
                imagePreview.classList.remove('hidden');
                defaultAvatar.classList.add('hidden');
                removeImageBtn.classList.remove('hidden');
            }

            function hideImagePreview() {
                imagePreview.src = '';
                imagePreview.classList.add('hidden');
                defaultAvatar.classList.remove('hidden');
                removeImageBtn.classList.add('hidden');
            }

            fotoArchivoInput.addEventListener('change', function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = (e) => { showImagePreview(e.target.result); urlFotoInput.value = ''; };
                    reader.readAsDataURL(file);
                }
            });

            urlFotoInput.addEventListener('input', function() {
                const url = this.value.trim();
                if (url) { showImagePreview(url); fotoArchivoInput.value = ''; } 
                else if (!fotoArchivoInput.files[0]) { hideImagePreview(); }
            });

            removeImageBtn.addEventListener('click', function() {
                hideImagePreview();
                fotoArchivoInput.value = '';
                urlFotoInput.value = '';
            });

            const form = document.getElementById('wizard-form');
            form.addEventListener('submit', function(e) {
                // Deshabilitar botón para evitar doble envío
                submitBtn.disabled = true;
                submitBtn.textContent = 'Registrando...';
            });
        });
    </script>
</LayoutProtected>