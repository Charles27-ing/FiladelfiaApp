// src/layouts/LayoutProtected.astro - LAYOUT PARA PÁGINAS PROTEGIDAS

import { supabase } from '../lib/supabase';
import type { Session } from "@supabase/supabase-js";

interface Props {
	title: string;
}

const { title } = Astro.props;

// OBTENER LA SESIÓN DIRECTAMENTE EN EL LAYOUT PROTEGIDO
const { data: { session } } = await supabase.auth.getSession();

// LÓGICA DE REDIRECCIÓN: Si no hay sesión, redirigir al login.
// Este layout SOLO se usa en páginas que requieren autenticación.
if (!session) {
	return Astro.redirect('/login');
}
// después de obtener session
const { data: profile, error } = await supabase
  .from('profiles')
  .select('role, full_name')
  .eq('id', session.user.id)
  .single();
  if (!profile) {
  return Astro.redirect('/completar-perfil');
  }
const isAdmin = profile?.role === 'admin';



// Cargar catálogos para modal rápido de usuarios (solo si es admin)
let rolesCatalog: Array<{ slug: string; name: string }> = [];
let sedesCatalog: Array<{ id: string; nombre_sede: string }> = [];
if (isAdmin) {
  const { data: rolesData } = await supabase
    .from('roles')
    .select('slug, name')
    .order('id');
  const { data: sedesData } = await supabase
    .from('sedes')
    .select('id, nombre_sede')
    .order('nombre_sede');
  rolesCatalog = rolesData ?? [];
  sedesCatalog = sedesData ?? [];
}

// Determinar la página activa para el menú
const currentPath = Astro.url.pathname;

// Obtener el email del usuario para mostrarlo en el layout
const userEmail = session.user?.email || 'Invitado';
const userName = profile?.full_name || (userEmail ? userEmail.split('@')[0] : 'Usuario');
