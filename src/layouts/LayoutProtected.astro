---
// src/layouts/LayoutProtected.astro - LAYOUT PARA PÁGINAS PROTEGIDAS

import { supabase } from '../lib/supabase';
import type { Session } from "@supabase/supabase-js";

interface Props {
	title: string;
}

const { title } = Astro.props;

// OBTENER LA SESIÓN DIRECTAMENTE EN EL LAYOUT PROTEGIDO
const { data: { session } } = await supabase.auth.getSession();

// LÓGICA DE REDIRECCIÓN: Si no hay sesión, redirigir al login.
// Este layout SOLO se usa en páginas que requieren autenticación.
if (!session) {
	return Astro.redirect('/login');
}

// Determinar la página activa para el menú
const currentPath = Astro.url.pathname;

// Obtener el email del usuario para mostrarlo en el layout
const userEmail = session.user?.email || 'Invitado';
---

<!doctype html>
<html lang="es" class="h-full bg-gray-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aplicación de gestión para la iglesia Filadelfia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
	</head>
	<body class="h-full">
		<!-- ====================================================== -->
		<!-- LAYOUT AUTENTICADO CON SIDEBAR -->
		<!-- ====================================================== -->
		<div class="flex h-full">
			<!-- ====================================================== -->
			<!-- SIDEBAR (MENÚ LATERAL IZQUIERDO) -->
			<!-- ====================================================== -->
			<aside class="hidden lg:flex lg:w-64 lg:flex-col lg:fixed lg:inset-y-0">
				<!-- Contenedor del sidebar -->
				<div class="flex flex-col flex-grow bg-white border-r border-gray-200 pt-5 pb-4 overflow-y-auto">
					<!-- Logo y título -->
					<div class="flex items-center flex-shrink-0 px-4 mb-8">
						<div class="flex items-center">
							<div class="flex-shrink-0 h-8 w-8 bg-green-600 rounded-lg flex items-center justify-center">
								<svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<div class="ml-3">
								<h1 class="text-lg font-semibold text-gray-900">Iglesia Filadelfia</h1>
								<p class="text-xs text-gray-500">Dios con nosotros</p>
							</div>
						</div>
					</div>

					<!-- Información del usuario -->
					<div class="px-4 mb-6">
						<div class="bg-gray-50 rounded-lg p-3">
							<div class="flex items-center">
								<div class="flex-shrink-0 h-10 w-10 bg-green-100 rounded-full flex items-center justify-center">
									<svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
									</svg>
								</div>
								<div class="ml-3 flex-1 min-w-0">
									<p class="text-sm font-medium text-gray-900 truncate">
										Hola, {userEmail.split('@')[0]}
									</p>
									<p class="text-xs text-gray-500 truncate">
										{userEmail}
									</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Navegación principal -->
					<nav class="flex-1 px-4 space-y-1">
						<!-- Dashboard -->
						<a href="/dashboard" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${
							currentPath === '/dashboard' 
								? 'bg-green-100 text-green-700 border-r-2 border-green-600' 
								: 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
						}`}>
							<svg class={`mr-3 h-5 w-5 ${currentPath === '/dashboard' ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
							</svg>
							Dashboard
						</a>

						<!-- Gestión de Personas -->
						<a href="/personas" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${
							currentPath.startsWith('/personas') 
								? 'bg-green-100 text-green-700 border-r-2 border-green-600' 
								: 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
						}`}>
							<svg class={`mr-3 h-5 w-5 ${currentPath.startsWith('/personas') ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M15 21a6 6 0 00-9-5.197M15 12a5 5 0 11-10 0 5 5 0 0110 0z"/>
							</svg>
							Gestión de Personas
						</a>

						<!-- Registrar Persona -->
						<a href="/personas/nueva" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ml-6 ${
							currentPath === '/personas/nueva' 
								? 'bg-green-100 text-green-700 border-r-2 border-green-600' 
								: 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
						}`}>
							<svg class={`mr-3 h-4 w-4 ${currentPath === '/personas/nueva' ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
							</svg>
							Registrar Persona
						</a>

						<!-- Contabilidad - Menú desplegable -->
						<div class="space-y-1">
							<button type="button" class="group w-full flex items-center justify-between px-3 py-2 text-sm font-medium rounded-md text-gray-600 hover:bg-gray-50 hover:text-gray-900 transition-colors" id="contabilidad-menu-button" aria-expanded="false" aria-haspopup="true">
								<div class="flex items-center">
									<svg class={`mr-3 h-5 w-5 ${currentPath.startsWith('/contabilidad') ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
									</svg>
									<span>Contabilidad</span>
								</div>
								<svg class="ml-2 h-4 w-4 text-gray-400 group-hover:text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
								</svg>
							</button>
							<div id="contabilidad-submenu" class="space-y-1 pl-4 hidden">
								<a href="/contabilidad/nueva-transaccion" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${currentPath === '/contabilidad/nueva-transaccion' ? 'bg-green-100 text-green-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}`}>
									<svg class={`mr-3 h-4 w-4 ${currentPath === '/contabilidad/nueva-transaccion' ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
									</svg>
									Registrar Transacción
								</a>
								<a href="/contabilidad/transacciones" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${currentPath === '/contabilidad/transacciones' ? 'bg-green-100 text-green-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}`}>
									<svg class={`mr-3 h-4 w-4 ${currentPath === '/contabilidad/transacciones' ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
									</svg>
									Listado de Transacciones
								</a>
								<a href="/contabilidad/actividades" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${currentPath.startsWith('/contabilidad/actividades') ? 'bg-green-100 text-green-700' : 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'}`}>
									<svg class={`mr-3 h-4 w-4 ${currentPath.startsWith('/contabilidad/actividades') ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
									Actividades
								</a>
							</div>
						</div>

						<!-- Reportes -->
						<a href="/reportes" class={`group flex items-center px-3 py-2 text-sm font-medium rounded-md transition-colors ${
							currentPath.startsWith('/reportes') 
								? 'bg-green-100 text-green-700 border-r-2 border-green-600' 
								: 'text-gray-600 hover:bg-gray-50 hover:text-gray-900'
						}`}>
							<svg class={`mr-3 h-5 w-5 ${currentPath.startsWith('/reportes') ? 'text-green-500' : 'text-gray-400 group-hover:text-gray-500'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
							</svg>
							Reportes
						</a>
					</nav>

					<!-- Botón de cerrar sesión -->
					<div class="flex-shrink-0 px-4 pt-4 border-t border-gray-200">
						<a href="/api/logout" class="group flex items-center px-3 py-2 text-sm font-medium text-gray-600 rounded-md hover:bg-red-50 hover:text-red-700 transition-colors">
							<svg class="mr-3 h-5 w-5 text-gray-400 group-hover:text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
							</svg>
							Cerrar Sesión
						</a>
					</div>
				</div>
			</aside>

			<!-- ====================================================== -->
			<!-- CONTENIDO PRINCIPAL -->
			<!-- ====================================================== -->
			<div class="lg:pl-64 flex flex-col flex-1">
				<!-- Header superior (móvil y desktop) -->
				<header class="bg-white shadow-sm border-b border-gray-200">
					<div class="px-4 sm:px-6 lg:px-8">
						<div class="flex justify-between h-16">
							<!-- Botón de menú móvil -->
							<div class="flex items-center lg:hidden">
								<button type="button" id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-green-500">
									<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
									</svg>
								</button>
								<h1 class="ml-3 text-lg font-semibold text-gray-900">Filadelfia</h1>
							</div>

							<!-- Título de la página (desktop) -->
							<div class="hidden lg:flex lg:items-center">
								<h1 class="text-xl font-semibold text-gray-900">{title}</h1>
							</div>

							<!-- Información del usuario (móvil) -->
							<div class="flex items-center lg:hidden">
								<div class="flex-shrink-0 h-8 w-8 bg-green-100 rounded-full flex items-center justify-center">
									<svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
									</svg>
								</div>
							</div>

							<!-- Acciones del header (desktop) -->
							<div class="hidden lg:flex lg:items-center lg:space-x-4">
								<!-- Notificaciones (placeholder) -->
								<button type="button" class="p-2 text-gray-400 hover:text-gray-500 hover:bg-gray-100 rounded-full">
									<svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5v-5zM10.5 3.5L6.5 7.5 10.5 11.5"/>
									</svg>
								</button>
							</div>
						</div>
					</div>
				</header>

				<!-- Área de contenido principal -->
				<main class="flex-1 overflow-y-auto">
					<div class="px-4 sm:px-6 lg:px-8 py-6">
						<slot />
					</div>
				</main>
			</div>

			<!-- ====================================================== -->
			<!-- MENÚ MÓVIL (OVERLAY) -->
			<!-- ====================================================== -->
			<div id="mobile-menu" class="fixed inset-0 z-40 lg:hidden hidden">
				<!-- Overlay -->
				<div class="fixed inset-0 bg-gray-600 bg-opacity-75" id="mobile-menu-overlay"></div>
				
				<!-- Panel del menú -->
				<div class="relative flex-1 flex flex-col max-w-xs w-full bg-white">
					<!-- Header del menú móvil -->
					<div class="absolute top-0 right-0 -mr-12 pt-2">
						<button type="button" id="mobile-menu-close" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
							<svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
							</svg>
						</button>
					</div>

					<!-- Contenido del menú móvil -->
					<div class="flex-1 h-0 pt-5 pb-4 overflow-y-auto">
						<!-- Logo -->
						<div class="flex-shrink-0 flex items-center px-4 mb-6">
							<div class="flex-shrink-0 h-8 w-8 bg-green-600 rounded-lg flex items-center justify-center">
								<svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<span class="ml-3 text-lg font-semibold text-gray-900">Filadelfia</span>
						</div>

						<!-- Navegación móvil -->
						<nav class="px-4 space-y-1">
							<a href="/dashboard" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Dashboard
							</a>
							<a href="/personas" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Gestión de Personas
							</a>
							<a href="/personas/nueva" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900 ml-4">
								Registrar Persona
							</a>
							<a href="/contabilidad/nueva-transaccion" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Registrar Transacción
							</a>
							<a href="/contabilidad/transacciones" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Listado de Transacciones
							</a>
							<a href="/contabilidad/actividades" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Actividades
							</a>
							<a href="/reportes" class="group flex items-center px-3 py-2 text-base font-medium text-gray-600 rounded-md hover:bg-gray-50 hover:text-gray-900">
								Reportes
							</a>
						</nav>
					</div>

					<!-- Footer del menú móvil -->
					<div class="flex-shrink-0 flex border-t border-gray-200 p-4">
						<div class="flex items-center">
							<div class="flex-shrink-0 h-10 w-10 bg-green-100 rounded-full flex items-center justify-center">
								<svg class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
								</svg>
							</div>
							<div class="ml-3">
								<p class="text-base font-medium text-gray-700">{userEmail.split('@')[0]}</p>
								<p class="text-sm font-medium text-gray-500">Ver perfil</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Scripts para funcionalidad del menú móvil -->
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const mobileMenuButton = document.getElementById('mobile-menu-button');
				const mobileMenu = document.getElementById('mobile-menu');
				const mobileMenuClose = document.getElementById('mobile-menu-close');
				const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');

				// Abrir menú móvil
				if (mobileMenuButton) {
					mobileMenuButton.addEventListener('click', function() {
						mobileMenu?.classList.remove('hidden');
					});
				}

				// Cerrar menú móvil
				function closeMobileMenu() {
					mobileMenu?.classList.add('hidden');
				}

				if (mobileMenuClose) {
					mobileMenuClose.addEventListener('click', closeMobileMenu);
				}

				if (mobileMenuOverlay) {
					mobileMenuOverlay.addEventListener('click', closeMobileMenu);
				}

				// Cerrar menú con tecla Escape
				document.addEventListener('keydown', function(e) {
					if (e.key === 'Escape') {
						closeMobileMenu();
					}
				});

				// Menú desplegable de Contabilidad
				const contabilidadMenuButton = document.getElementById('contabilidad-menu-button');
				const contabilidadSubmenu = document.getElementById('contabilidad-submenu');
				
				if (contabilidadMenuButton && contabilidadSubmenu) {
					contabilidadMenuButton.addEventListener('click', function() {
						const expanded = this.getAttribute('aria-expanded') === 'true';
						this.setAttribute('aria-expanded', (!expanded).toString());
						contabilidadSubmenu.classList.toggle('hidden', expanded);
						
						// Rotar el ícono de la flecha
						const icon = this.querySelector('svg:last-child');
						if (icon) {
							icon.style.transform = expanded ? 'rotate(0deg)' : 'rotate(180deg)';
						}
					});
					
					// Mantener abierto el submenú si la ruta actual está dentro de contabilidad
					if (window.location.pathname.startsWith('/contabilidad')) {
						contabilidadMenuButton.setAttribute('aria-expanded', 'true');
						contabilidadSubmenu.classList.remove('hidden');
						const icon = contabilidadMenuButton.querySelector('svg:last-child');
						if (icon) {
							icon.style.transform = 'rotate(180deg)';
						}
					}
				}
			});
		</script>
	</body>
</html>
