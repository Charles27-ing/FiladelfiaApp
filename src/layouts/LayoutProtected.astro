			  document.addEventListener('DOMContentLoaded', function() {
			  // Menú desplegable de Contabilidad
				const contabilidadMenuButton = document.getElementById('contabilidad-menu-button');
				const contabilidadSubmenu = document.getElementById('contabilidad-submenu');
				if (contabilidadMenuButton && contabilidadSubmenu) {
					contabilidadMenuButton.addEventListener('click', (ev) => {
						const btn = ev.currentTarget;
						if (!(btn instanceof HTMLElement)) return;
						const expanded = btn.getAttribute('aria-expanded') === 'true';
						btn.setAttribute('aria-expanded', (!expanded).toString());
						contabilidadSubmenu.classList.toggle('expanded', !expanded);
						const iconEl = btn.querySelector('svg:last-child');
						if (iconEl instanceof HTMLElement) {
							iconEl.style.transform = expanded ? 'rotate(0deg)' : 'rotate(180deg)';
						}
					});
					if (window.location.pathname.startsWith('/contabilidad')) {
						contabilidadMenuButton.setAttribute('aria-expanded', 'true');
						contabilidadSubmenu.classList.remove('hidden');
						contabilidadSubmenu.classList.add('expanded');
						const iconEl = contabilidadMenuButton.querySelector('svg:last-child');
						if (iconEl instanceof HTMLElement) {
							iconEl.style.transform = 'rotate(180deg)';
						}
					}
				}
			  });
			</script>

            
