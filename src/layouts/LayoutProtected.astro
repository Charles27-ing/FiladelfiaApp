---
// src/layouts/LayoutProtected.astro - LAYOUT PARA PÁGINAS PROTEGIDAS

import { supabase } from '../lib/supabase';
import type { Session } from "@supabase/supabase-js";

interface Props {
	title: string;
}

const { title } = Astro.props;

// OBTENER LA SESIÓN DIRECTAMENTE EN EL LAYOUT PROTEGIDO
const { data: { session } } = await supabase.auth.getSession();

// LÓGICA DE REDIRECCIÓN: Si no hay sesión, redirigir al login.
// Este layout SOLO se usa en páginas que requieren autenticación.
if (!session) {
	return Astro.redirect('/login');
}

// Determinar la página activa para el menú
const currentPath = Astro.url.pathname;

// Obtener el email del usuario para mostrarlo en el layout
const userEmail = session.user?.email || 'Invitado';
---

<!doctype html>
<html lang="es" class="h-full bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Aplicación de gestión para la iglesia Filadelfia" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
		<style>
			/* Gradientes personalizados */
			.gradient-bg {
				background: linear-gradient(135deg, #068d60 0%, #087553fb 50%, #047857 100%);
			}
			.gradient-hover {
				background: linear-gradient(135deg, #34d399 0%, #10b981 100%);
			}
			.gradient-accent {
				background: linear-gradient(135deg, #6ee7b7 0%, #34d399 50%, #10b981 100%);
			}
			.glass-effect {
				background: rgba(255, 255, 255, 0.95);
				backdrop-filter: blur(10px);
				border: 1px solid rgba(255, 255, 255, 0.2);
			}
			.nav-item-active {
				background: linear-gradient(135deg, rgba(16, 185, 129, 0.2) 0%, rgba(5, 150, 105, 0.3) 100%);
				border-right: 3px solid #10b981;
				box-shadow: inset 0 0 10px rgba(16, 185, 129, 0.1);
			}
			.nav-item-hover {
				background: rgba(16, 185, 129, 0.05);
				transform: translateX(2px);
				transition: all 0.3s ease;
			}

			/* Botones mejorados con efecto espada */
			.nav-button {
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 12px;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				transform-origin: left center;
			}

			.nav-button::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg,
					transparent 0%,
					rgba(255, 255, 255, 0.4) 50%,
					transparent 100%);
				transition: left 0.6s ease;
				z-index: 1;
			}

			.nav-button:hover {
				background: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.25) 100%);
				border-color: rgba(16, 185, 129, 0.3);
				transform: translateX(4px) scale(1.02);
				box-shadow:
					0 8px 25px rgba(16, 185, 129, 0.2),
					0 4px 10px rgba(16, 185, 129, 0.1),
					inset 0 1px 0 rgba(255, 255, 255, 0.2);
			}

			.nav-button:hover::before {
				left: 100%;
			}

			.nav-button:active {
				transform: translateX(2px) scale(1.01);
				transition: all 0.1s ease;
			}

			.nav-button svg {
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
				filter: drop-shadow(0 0 3px rgba(16, 185, 129, 0.3));
			}

			.nav-button:hover svg {
				transform: scale(1.1);
				filter: drop-shadow(0 0 8px rgba(16, 185, 129, 0.6));
			}

			/* Botón de contabilidad mejorado */
			.contabilidad-button {
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.08) 0%, rgba(255, 255, 255, 0.03) 100%);
				border: 1px solid rgba(255, 255, 255, 0.08);
				border-radius: 12px;
				transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
				transform-origin: left center;
			}

			.contabilidad-button::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg,
					transparent 0%,
					rgba(255, 255, 255, 0.5) 30%,
					rgba(16, 185, 129, 0.3) 50%,
					rgba(255, 255, 255, 0.5) 70%,
					transparent 100%);
				transition: left 0.8s cubic-bezier(0.4, 0, 0.2, 1);
				z-index: 1;
			}

			.contabilidad-button:hover {
				background: linear-gradient(135deg, rgba(16, 185, 129, 0.12) 0%, rgba(5, 150, 105, 0.2) 100%);
				border-color: rgba(16, 185, 129, 0.25);
				transform: translateX(6px) scale(1.03);
				box-shadow:
					0 12px 30px rgba(16, 185, 129, 0.25),
					0 6px 15px rgba(16, 185, 129, 0.15),
					inset 0 1px 0 rgba(255, 255, 255, 0.15);
			}

			.contabilidad-button:hover::before {
				left: 100%;
			}

			.contabilidad-button svg {
				transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
				filter: drop-shadow(0 0 4px rgba(16, 185, 129, 0.4));
			}

			.contabilidad-button:hover svg {
				transform: scale(1.15) rotate(5deg);
				filter: drop-shadow(0 0 12px rgba(16, 185, 129, 0.8));
			}

			/* Botón activo con efecto mejorado */
			.nav-item-active {
				background: linear-gradient(135deg, rgba(16, 185, 129, 0.25) 0%, rgba(5, 150, 105, 0.35) 100%);
				border-right: 4px solid #10b981;
				box-shadow:
					inset 0 0 15px rgba(16, 185, 129, 0.15),
					0 4px 15px rgba(16, 185, 129, 0.2);
				position: relative;
			}

			.nav-item-active::after {
				content: '';
				position: absolute;
				top: 0;
				left: 0;
				right: 0;
				bottom: 0;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
				pointer-events: none;
				border-radius: 12px;
			}

			/* Efectos para el menú móvil */
			.mobile-nav-button {
				position: relative;
				overflow: hidden;
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 12px;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			.mobile-nav-button::before {
				content: '';
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				background: linear-gradient(90deg,
					transparent 0%,
					rgba(255, 255, 255, 0.3) 50%,
					transparent 100%);
				transition: left 0.6s ease;
				z-index: 1;
			}

			.mobile-nav-button:hover {
				background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
				border-color: rgba(255, 255, 255, 0.2);
				transform: translateX(2px);
				box-shadow: 0 4px 15px rgba(255, 255, 255, 0.1);
			}

			.mobile-nav-button:hover::before {
				left: 100%;
			}

			/* Transiciones para el submenú de contabilidad */
			#contabilidad-submenu {
				max-height: 0;
				opacity: 0;
				overflow: hidden;
				transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
			}

			#contabilidad-submenu.expanded {
				max-height: 500px;
				opacity: 1;
			}

			/* Estilos para menú colapsable */
			.sidebar-text {
				opacity: 0;
				width: 0;
				overflow: hidden;
				transition: all 0.3s ease;
				white-space: nowrap;
				text-overflow: ellipsis;
			}

			aside:hover .sidebar-text {
				opacity: 1;
				width: auto;
			}

			aside:not(:hover) .nav-button,
			aside:not(:hover) .contabilidad-button {
				justify-content: center;
			}

			aside:hover .nav-button,
			aside:hover .contabilidad-button {
				justify-content: flex-start;
			}

			#main-content {
				padding-left: 5rem;
			}

			/* Normalización de tamaño para íconos SVG en la barra lateral */
			#sidebar .nav-button svg,
			#sidebar .contabilidad-button svg {
				width: 24px !important;
				height: 24px !important;
				min-width: 24px;
				min-height: 24px;
				flex-shrink: 0;
				display: block;
				stroke-width: 2;
			}

			/* Avatar del usuario en el sidebar */
			#sidebar .glass-effect svg {
				width: 24px !important;
				height: 24px !important;
				min-width: 24px;
				min-height: 24px;
				flex-shrink: 0;
				display: block;
				margin-inline: auto; /* centro dentro del contenedor blanco */
				stroke-width: 2;
			}

			/* Contenedor del avatar (círculo blanco): bloquear desbordes y reforzar centrado */
			#sidebar .glass-effect .flex-shrink-0 {
				overflow: hidden; /* evita desborde visual hacia la derecha */
				display: flex; /* asegurar centrado */
				align-items: center;
				justify-content: center;
			}

			/* Regla general: ningún SVG del sidebar debe desbordar su contenedor */
			#sidebar svg {
				max-width: 100%;
				max-height: 100%;
				display: block;
				overflow: hidden;
			}

			/* Evitar desbordes horizontales del sidebar y submenú */
			#sidebar,
			#sidebar * {
				box-sizing: border-box;
			}

			#contabilidad-submenu {
				overflow-x: hidden;
			}

			/* Estado colapsado: centrar íconos y evitar desbordes */
			aside:not(:hover) .nav-button svg,
			aside:not(:hover) .contabilidad-button svg {
				margin-right: 0; /* anula mr-4 en colapsado */
				margin-left: 0;
				margin-inline: auto; /* centra horizontalmente */
			}

			/* Quitar indentación de subítems en colapsado (e.g., enlaces con ml-8) */
			aside:not(:hover) a.ml-8 {
				margin-left: 0 !important;
			}

			/* Quitar padding izquierdo del contenedor del submenú siempre para alinear con top-level */
			#contabilidad-submenu {
				padding-left: 0 !important;
			}

			/* Normalizar padding de botones del submenú a px-2 para alinear con Dashboard */
			#contabilidad-submenu .nav-button {
				padding-left: 0.5rem !important;
				padding-right: 0.5rem !important;
			}

			/* Asegurar que los botones ocupen todo el ancho para centrar contenido */
			#sidebar .nav-button,
			#sidebar .contabilidad-button {
				width: 100%;
				overflow: hidden; /* evita desbordes en hover/animaciones */
			}

			/* Reducir padding horizontal y desactivar escalado en hover cuando está colapsado */
			aside:not(:hover) .nav-button,
			aside:not(:hover) .contabilidad-button {
				padding-left: 0.5rem !important;
				padding-right: 0.5rem !important;
			}

			aside:not(:hover) .nav-button:hover svg,
			aside:not(:hover) .contabilidad-button:hover svg {
				transform: none !important;
			}

			/* Quitar efectos de sombra/resplandor en colapsado para evitar "overflow" visual */
			aside:not(:hover) .nav-button svg,
			aside:not(:hover) .contabilidad-button svg {
				filter: none !important;
			}

			/* Desactivar transform del botón completo para evitar desplazamiento en colapsado */
			aside:not(:hover) .nav-button:hover,
			aside:not(:hover) .contabilidad-button:hover {
				transform: none !important;
			}

			/* Ocultar el chevron del botón de contabilidad cuando está colapsado */
			aside:not(:hover) #contabilidad-menu-button svg:last-child {
				display: none;
			}
		</style>
	</head>
	<body class="h-full">
		<div class="flex h-full">
			<!-- SIDEBAR (MENÚ LATERAL IZQUIERDO) -->
			<aside id="sidebar" class="hidden lg:flex lg:w-20 hover:lg:w-80 lg:flex-col lg:fixed lg:inset-y-0 transition-all duration-300 overflow-hidden z-50">
				<div class="flex flex-col flex-grow gradient-bg pt-5 pb-4 overflow-y-auto shadow-2xl">
					<!-- Logo y título -->
					<div class="flex items-center flex-shrink-0 px-4 mb-8">
						<div class="flex items-center">
							<div class="flex-shrink-0 h-12 w-12 bg-white/20 rounded-xl flex items-center justify-center backdrop-blur-sm border border-white/30">
								<svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
									<path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
								</svg>
							</div>
							<div class="ml-4">
								<h1 class="text-xl font-bold text-white sidebar-text">Iglesia Filadelfia</h1>
								<p class="text-sm text-green-100 sidebar-text">Dios con nosotros</p>
							</div>
						</div>
					</div>

					<!-- Información del usuario -->
					<div class="px-4 mb-6">
						<div class="glass-effect rounded-xl p-4 shadow-lg">
							<div class="flex items-center">
								<div class="flex-shrink-0 h-12 w-12 bg-gradient-to-br from-green-400 to-emerald-500 rounded-full flex items-center justify-center shadow-lg">
									<svg class="h-7 w-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
									</svg>
								</div>
								<div class="ml-4 flex-1 min-w-0">
									<p class="text-sm font-semibold text-gray-800 truncate sidebar-text">
										Hola, {userEmail.split('@')[0]}
									</p>
									<p class="text-xs text-gray-600 truncate sidebar-text">
										{userEmail}
									</p>
								</div>
							</div>
						</div>
					</div>

					<!-- Navegación principal -->
					<nav class="flex-1 px-4 space-y-2">
						<!-- Dashboard -->
						<a href="/dashboard" class={`nav-button group flex items-center px-2 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
							currentPath === '/dashboard'
								? 'nav-item-active text-green-50'
								: 'text-green-100 hover:nav-item-hover hover:text-white'
						}`}>
							<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
								currentPath === '/dashboard' ? 'text-green-200' : 'text-green-200 group-hover:text-white'
							}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
								<path stroke-linecap="round" stroke-linejoin="round" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v4H8V5z"/>
							</svg>
							<span class="sidebar-text">Dashboard</span>
						</a>

						<!-- Gestión de Personas -->
						<a href="/personas" class={`nav-button group flex items-center px-2 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
							currentPath.startsWith('/personas')
								? 'nav-item-active text-green-50'
								: 'text-green-100 hover:nav-item-hover hover:text-white'
						}`}>
							<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
								currentPath.startsWith('/personas') ? 'text-green-200' : 'text-green-200 group-hover:text-white'
							}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M15 21a6 6 0 00-9-5.197M15 12a5 5 0 11-10 0 5 5 0 0110 0z"/>
							</svg>
							<span class="sidebar-text">Gestión de Personas</span>
						</a>

						<!-- Registrar Persona -->
						<a href="/personas/nueva" class={`nav-button group flex items-center px-4 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ml-8 ${
							currentPath === '/personas/nueva'
								? 'nav-item-active text-green-50'
								: 'text-green-100 hover:nav-item-hover hover:text-white'
						}`}>
							<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
								currentPath === '/personas/nueva' ? 'text-green-200' : 'text-green-200 group-hover:text-white'
							}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
							</svg>
							<span class="sidebar-text">Registrar Persona</span>
						</a>

						<!-- Contabilidad - Menú desplegable -->
						<div class="space-y-2">
							<button type="button" class="contabilidad-button group w-full flex items-center justify-between px-4 py-3 text-sm font-semibold rounded-xl text-green-100 hover:text-white transition-all duration-300" id="contabilidad-menu-button" aria-expanded="false" aria-haspopup="true">
								<div class="flex items-center">
									<svg class={`mr-4 h-6 w-6 transition-all duration-300 text-green-200 group-hover:text-white`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
									</svg>
									<span class="sidebar-text">Contabilidad</span>
								</div>
								<svg class="ml-2 h-5 w-5 text-green-200 group-hover:text-white transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
									<path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
								</svg>
							</button>
							<div id="contabilidad-submenu" class="space-y-2 pl-4">
								<a href="/contabilidad/nueva-transaccion" class={`nav-button group flex items-center px-4 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
									currentPath === '/contabilidad/nueva-transaccion' ? 'nav-item-active text-green-50' : 'text-green-100 hover:nav-item-hover hover:text-white'
								}`}>
									<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
										currentPath === '/contabilidad/nueva-transaccion' ? 'text-green-200' : 'text-green-200 group-hover:text-white'
									}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
									</svg>
									<span class="sidebar-text">Registrar Transacción</span>
								</a>
								<a href="/contabilidad/transacciones" class={`nav-button group flex items-center px-4 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
									currentPath === '/contabilidad/transacciones' ? 'nav-item-active text-green-50' : 'text-green-100 hover:nav-item-hover hover:text-white'
								}`}>
									<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
										currentPath === '/contabilidad/transacciones' ? 'text-green-200' : 'text-green-200 group-hover:text-white'
									}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2v12a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2v12"/>
									</svg>
									<span class="sidebar-text">Listado de Transacciones</span>
								</a>
								<a href="/contabilidad/actividades" class={`nav-button group flex items-center px-4 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
									currentPath.startsWith('/contabilidad/actividades') ? 'nav-item-active text-green-50' : 'text-green-100 hover:nav-item-hover hover:text-white'
								}`}>
									<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
										currentPath.startsWith('/contabilidad/actividades') ? 'text-green-200' : 'text-green-200 group-hover:text-white'
									}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
										<path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
									</svg>
									<span class="sidebar-text">Resumen de Actividades</span>
								</a>
								<a href="/contabilidad/categorias" class={`nav-button group flex items-center px-4 py-3 text-sm font-semibold rounded-xl transition-all duration-300 ${
									currentPath.startsWith('/contabilidad/categorias') ? 'nav-item-active text-green-50' : 'text-green-100 hover:nav-item-hover hover:text-white'
								}`}>
									<svg class={`mr-4 h-6 w-6 transition-all duration-300 ${
										currentPath.startsWith('/contabilidad/categorias') ? 'text-green-200' : 'text-green-200 group-hover:text-white'
